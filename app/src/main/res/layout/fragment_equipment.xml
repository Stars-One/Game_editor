<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context=".frament.EquipmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/image_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/head"
            android:layout_gravity="center"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/image_defence"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/defence"
            android:scaleType="center"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/image_sword"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:orientation="horizontal"

            android:background="@drawable/sword"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/image_wing"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/wing"
            android:orientation="horizontal"
            />

        <LinearLayout
            android:id="@+id/image_necklace"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/necklace"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:id="@+id/image_belt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/belt"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            />
        <LinearLayout
            android:id="@+id/image_clothes"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/clothe"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:id="@+id/image_bracelet"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/cuff"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            />
        <LinearLayout
            android:id="@+id/image_pant"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/pant"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:id="@+id/image_gemstone"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/vector_drawable_gemstone"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"

            />
        <LinearLayout
            android:id="@+id/image_ring"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/vector_drawable_ring"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shoes"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
