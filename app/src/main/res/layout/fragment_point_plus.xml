<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.wan.frament.PointPlusFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/strength"
               android:layout_gravity="center"
               android:textSize="25sp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="："
               android:textSize="25sp"/>

           <TextView
               android:id="@+id/plus_strength"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="25sp"
               android:layout_gravity="center"
               android:text="@string/point_plus_default"
               />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:gravity="right">
               <ImageView
                   android:id="@+id/plus_strength_btn"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/plus"
                   android:scaleType="fitXY"
                   android:visibility="invisible"
                   />
               <ImageView
                   android:id="@+id/minus_strength_btn"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/minus"
                   android:scaleType="fitXY"
                   android:visibility="invisible"
                   />
           </LinearLayout>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/spirit"
               android:layout_gravity="center"
               android:textSize="25sp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="："
               android:layout_gravity="center"
               android:textSize="25sp"/>

           <TextView
               android:id="@+id/plus_spirit"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="@string/point_plus_default"
               android:textSize="25sp"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:gravity="right">
               <ImageView
                   android:id="@+id/plus_spirit_btn"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/plus"
                   android:scaleType="fitXY"
                   android:visibility="invisible"
                   />
               <ImageView
                   android:id="@+id/minus_spirit_btn"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/minus"
                   android:scaleType="fitXY"
                   android:visibility="invisible"
                   />
           </LinearLayout>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/quick"
               android:layout_gravity="center"
               android:textSize="25sp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="："
               android:layout_gravity="center"
               android:textSize="25sp"/>

           <TextView
               android:id="@+id/plus_quick"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="@string/point_plus_default"
               android:textSize="25sp"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:gravity="right">
               <ImageView
                   android:id="@+id/plus_quick_btn"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/plus"
                   android:scaleType="fitXY"
                   android:visibility="invisible"
                   />
               <ImageView
                   android:id="@+id/minus_quick_btn"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/minus"
                   android:scaleType="fitXY"
                   android:visibility="invisible"
                   />
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/intelligence"
               android:layout_gravity="center"
               android:textSize="25sp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="："
               android:textSize="25sp"/>

           <TextView
               android:id="@+id/plus_intelligence"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="@string/point_plus_default"
               android:textSize="25sp"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:gravity="right">
               <ImageView
                   android:id="@+id/plus_intelligence_btn"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/plus"
                   android:scaleType="fitXY"
                   android:visibility="invisible"
                   />
               <ImageView
                   android:id="@+id/minus_intelligence_btn"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/minus"
                   android:scaleType="fitXY"
                   android:visibility="invisible"
                   />
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="@string/defence"
               android:textSize="25sp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="："
               android:textSize="25sp"/>

           <TextView
               android:id="@+id/plus_defence"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:textSize="25sp"
               android:text="@string/point_plus_default"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:gravity="right">
               <ImageView
                   android:id="@+id/plus_defence_btn"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/plus"
                   android:scaleType="fitXY"
                   android:visibility="invisible"
                   />
               <ImageView
                   android:id="@+id/minus_defence_btn"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/minus"
                   android:scaleType="fitXY"
                   android:visibility="invisible"
                   />
           </LinearLayout>
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/current_level"
                  android:textSize="20sp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=":"
                  android:textSize="20sp"/>
              <TextView
                  android:id="@+id/showLevel"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:text="10"/>
          </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/surplus_point"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/showPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="10"/>
            </LinearLayout>
        </LinearLayout>


   </LinearLayout>




</ScrollView>
