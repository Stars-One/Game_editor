<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"/>

    <fragment
        android:id="@+id/showPropertyFrag"
        android:name="com.wan.gameeditor1.frament.ShowPropertyFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        tools:layout="@layout/fragment_show_property"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayoutProperty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/current_property"

                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/imageViewProperty"
                android:layout_width="70dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/colorblue"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutEquipment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/current_equipment"

                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/imageViewEquipment"
                android:layout_width="70dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/colorgrey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutPointPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/current_point_plus"

                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/imageViewPointPlus"
                android:layout_width="70dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/colorgrey"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
